<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121212"
    >



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgColor"
    android:paddingHorizontal="26dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="12dp">

        <ImageView
            android:id="@+id/profile_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="180"
            android:layout_centerVertical="true"

            android:src="@drawable/right_arrow_icon"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/profile_back"
            android:text="Profile"
            android:layout_centerVertical="true"
            android:textColor="#FFFFFF"
            android:layout_marginStart="16dp"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:background="@drawable/border_radius"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:src="@drawable/message_icon"
         />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/secondary"
                android:text="support" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="28dp">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_launcher_background"
             android:scaleType="centerCrop"
            android:clipToOutline="true"
           />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Andaz Kumar"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:id="@+id/member_since"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="member since Dec, 2020"
                android:textColor="@color/secondary"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/edit_profile_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cicular_border"
            android:src="@drawable/pen_icon"
            android:padding="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/border"

        android:padding="18dp"
        android:layout_marginTop="24dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:src="@drawable/car_icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/garage_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="get to know your vehicles, inside out"
            android:textColor="@color/secondary"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/cred_garage_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CRED garage"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            />

        <ImageView
            android:id="@+id/garage_arrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/right_arrow_icon"
            android:layout_marginHorizontal="16dp"
            />
        </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"

            android:src="@drawable/credit_score_icon" />

        <TextView
            android:id="@+id/credit_score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="credit score"
            android:textColor="@color/secondary"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/refresh_available_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• REFRESH AVAILABLE"
            android:fontFamily="sans-serif"
            android:textFontWeight="500"
            android:textColor="#1DB31D"
            android:textSize="12sp"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/credit_score_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="757"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_weight="1"
            android:gravity="end"/>

        <ImageView
            android:id="@+id/credit_score_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/light_arrow_icon"
            android:layout_marginLeft="18dp"
           />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginVertical="6dp"
        android:background="@color/secondary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginVertical="8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:src="@drawable/rupee_icon" />

        <TextView
            android:id="@+id/lifetime_cashback_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lifetime cashback"
            android:textColor="@color/secondary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/lifetime_cashback_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="₹3"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_weight="1"
            android:gravity="end"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/light_arrow_icon"
            android:layout_marginLeft="18dp"
        />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginVertical="6dp"
        android:background="@color/secondary" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginVertical="8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:src="@drawable/bank_icon" />

        <TextView
            android:id="@+id/bank_balance_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bank balance"
            android:textColor="@color/secondary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bank_balance_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="check"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_weight="1"
            android:gravity="end"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/light_arrow_icon"
            android:layout_marginLeft="18dp"
       />

    </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="26dp"
        android:orientation="vertical">


    <TextView
        android:id="@+id/rewards_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="YOUR REWARDS &amp; BENEFITS"
        android:letterSpacing="0.05"
        android:textColor="#A3A3A3"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textFontWeight="400"
        android:layout_marginTop="22dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginVertical="12dp">

        <TextView
            android:id="@+id/cashback_balance_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cashback balance"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/cashback_balance_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:text="₹0"
            android:textColor="@color/secondary"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cashback_balance_text" />

        <ImageView
            android:id="@+id/cashback_balance_arrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/right_angular_arrow"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/secondary" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginVertical="8dp">

            <TextView
                android:id="@+id/coins_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="coins"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/coins_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="26,46,583"
                android:textColor="@color/secondary"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/coins_text" />

            <ImageView
                android:id="@+id/coins_arrow"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/right_angular_arrow"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginVertical="6dp"
        android:background="@color/secondary" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginVertical="8dp">

            <TextView
                android:id="@+id/win_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="win upto Rs 1000"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/refer_and_earn_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="refer and earn"
                android:textColor="@color/secondary"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/win_text" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/right_angular_arrow"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/transactions_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TRANSACTIONS &amp; SUPPORT"
        android:textColor="#A3A3A3"
        android:textSize="16sp"
        android:letterSpacing="0.05"
        android:fontFamily="sans-serif"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/all_transactions_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="all transactions"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/all_transactions_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_angular_arrow"
            app:tint="#FFFFFF"/>
    </LinearLayout>

    </LinearLayout>

</LinearLayout>
